# MQTT (docker network defaults)
MQTT_HOST=mosquitto
MQTT_PORT=1883
MQTT_USER=
MQTT_PASS=

# Align with policy_brain + act/cmd command bus
TOPIC_FRAME=self_gaming/vision/frame
TOPIC_INTENT=policy_brain/cmd
TOPIC_ACTION=act/cmd
TOPIC_TELEM=self_gaming/telemetry/nitrogen

# NitroGen inference server base URL (adjust to your serve.py logs)
NITROGEN_BASE_URL=http://nitrogen:8000
# For local runs, set MQTT_HOST=127.0.0.1 and NITROGEN_BASE_URL=http://127.0.0.1:8000
NITROGEN_TIMEOUT_S=2.0

# Rate limit outgoing actions (Hz). Start lower if you see UI/input overload.
ACTION_RATE_HZ=15

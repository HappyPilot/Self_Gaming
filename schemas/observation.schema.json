{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/HappyPilot/Self_Gaming/main/schemas/observation.schema.json",
  "title": "GameObservation",
  "type": "object",
  "required": ["ok", "timestamp", "frame_id"],
  "properties": {
    "ok": { "type": "boolean" },
    "timestamp": { "type": "number" },
    "frame_id": { "type": "integer" },
    "yolo_objects": {
      "type": "array",
      "items": { "$ref": "#/$defs/detected_object" }
    },
    "text_zones": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/ocr_zone" }
    },
    "player_candidate": {
      "anyOf": [
        { "$ref": "#/$defs/detected_object" },
        { "type": "null" }
      ]
    },
    "source": { "type": "string" }
  },
  "additionalProperties": true,
  "$defs": {
    "bbox_norm": {
      "type": "array",
      "minItems": 4,
      "maxItems": 4,
      "items": { "type": "number", "minimum": 0, "maximum": 1 }
    },
    "detected_object": {
      "type": "object",
      "required": ["label", "confidence", "bbox"],
      "properties": {
        "label": { "type": "string" },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "bbox": { "$ref": "#/$defs/bbox_norm" },
        "extra": { "type": "object" }
      },
      "additionalProperties": true
    },
    "ocr_zone": {
      "type": "object",
      "required": ["text", "confidence"],
      "properties": {
        "text": { "type": "string" },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "bbox": {
          "anyOf": [
            { "$ref": "#/$defs/bbox_norm" },
            { "type": "null" }
          ]
        },
        "region_name": { "type": "string" }
      },
      "additionalProperties": true
    }
  }
}
